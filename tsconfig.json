{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",                       
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "strict": false,         
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "node_modules/@types"],
    "rootDir": "src",
    "outDir": "dist"                         
  },
  "exclude": ["node_modules"]
}
